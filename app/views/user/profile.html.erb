<div class="container">
  <div class="row">
    <div class="col-4">

      <%= image_tag current_user.avatar, width: "100px" ,class: "img-rounded" %>
      <%= current_user.name %>

    </div>
    <div class="col-8 text-left">
      <h1><%= current_user.name %></h1>
      <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-secondary" %>
      <div class="profile-stats"><%= current_user.posts.count%> Posts</div>
      <div class="profile-stats"><%= current_user.total_followers%> followers</div>
      <div class="profile-stats"><%= current_user.total_following%> following</div>
    </div>
    <div class="row">
          <% current_user.posts.each do |p|%>

              <div class="col-4">
                <% p.images.each do |image| %>
                    <div class="insta-post">
                      <%= image_tag image, class: "img img-fluid" %>
                    </div>
                  <%end%>
              </div>

        <% end %>
    </div>
</div>




