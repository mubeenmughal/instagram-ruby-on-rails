<%= form_for @post do |f| %>

    <div class="form-group">
        <%= f.label "Add post" %><br />
        <%= f.file_field :images%><br>
    </div>
    <div class="form-group">
        <%= f.label "Description",class: "form-control" %>
        <%= f.text_area :description, class: "form-control" %>
    </div>

    <%= f.submit "save Post", class: "btn-btn-success"%>
<% end %>
